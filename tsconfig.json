{
    "compilerOptions": {
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "noImplicitAny": true,
        "removeComments": true,
        "baseUrl": "./src/index.ts",
        "outDir": "./dist/es6",
        "sourceMap": true,
        "declaration": false,
        "downlevelIteration": true,
        "experimentalDecorators": true,
        "moduleResolution": "node",
        "importHelpers": true,
        "target": "es2019",
        "typeRoots": [
            "node_modules/@types"
        ],
        "lib": [
            "es2019",
            "dom"
        ]
    },
    "include": [
        "src/**/*"
    ]
}
